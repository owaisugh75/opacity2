{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"declaration": true,
		"importHelpers": true,
		"module": "ES2015",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2020"
	},
	"include": ["types/**/*.d.ts", "packages/**/src/**/*.ts"]
}
